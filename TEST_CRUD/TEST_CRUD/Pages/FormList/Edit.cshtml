@page
@model TEST_CRUD.Pages.FormList.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="border">
    <br />
    <form method="post">

        <input asp-for="InfoList.Id"  type="hidden"/>

        <div class="container" style="padding:20px;">

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="InfoList.FirstName"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="InfoList.FirstName" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="InfoList.LastName"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="InfoList.LastName" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="InfoList.Age"></label>
                    </div>
                    <div class="col-sm-1">
                        <input asp-for="InfoList.Age" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-2">
                        <input type="submit" value="Update" class="btn btn-primary form-control"/>
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-light">Back To List</a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

